#editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.md]
trim_trailing_whitespace = false

[*.html]
indent_inner_html = true
wrap_attributes = force
extra_liners = "head, body, /html"
preserve_newlines = true
max_line_length = 80
